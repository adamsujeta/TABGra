@model IEnumerable<TABGra.Models.Zadanie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zadania</h2>
<form method="get" action="@Url.Action("Search", "Zadanies")">
    <label for="search">Wyszukiwanie po opisie</label>
    <input type="text" name="search" id="search" />
    <button type="submit">Wyszukaj</button>
</form>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nagroda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NPC)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nagroda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NPC)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
