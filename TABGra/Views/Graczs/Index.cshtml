@model IEnumerable<TABGra.Models.Gracz>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gracze</h2>
<form method="get" action="@Url.Action("Search", "Graczs")">
    <label for="search">Wyszukiwanie po nazwie</label>
    <input type="text" name="search" id="search" />
    <button type="submit">Wyszukaj</button>
</form>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.doswiadczenie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sila)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zycia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.poziom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doswiadczenie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sila)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zycia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.poziom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
